<container>
  <row>
    <columns small="24" valign="middle">
      <center>
        <spacer size="24"/>

        <h3 class="lead"><%= @headline || t('notification_mailer.headline') %></h3>
        <p class="lead">
          <%= @body.gsub("\n", "<br />").html_safe %>
        </p>
        <p class="lead"><%= t('notification_mailer.greeting').html_safe %></h3>
      </center>
    </columns>
  </row>
</container>
